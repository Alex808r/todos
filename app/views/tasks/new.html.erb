<h1>New Task</h1>
<%= form_for :task, url: '/tasks'  do |f| %>
  <% if @task && @task.errors.any? %>
  <p>
      <ul>
      <%@task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
          <% end %>
      </ul>
  </p>
    <%end %>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :text %>
  <%=f.text_area :text %>
  </p>


  <p>
    <%= f.submit %> <br/>
  </p>


<% end %>